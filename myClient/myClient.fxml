<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<!--Arunika Oyshi-->

<AnchorPane id="AnchorPane" prefHeight="579.0" prefWidth="618.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="myMasterClient.myClientController">
   <children>
      <Label fx:id="clientLabel" layoutX="260.0" layoutY="7.0" text="Client">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Label>
      <Button fx:id="connect" layoutX="26.0" layoutY="52.0" mnemonicParsing="false" onAction="#connectEvent" prefHeight="37.0" prefWidth="112.0" text="Connect" />
      <Button fx:id="disconnect" disable="true" layoutX="26.0" layoutY="253.0" mnemonicParsing="false" onAction="#disconnectEvent" prefHeight="37.0" prefWidth="112.0" text="Disconnect" />
      <TextArea fx:id="logDisplay" editable="false" layoutX="152.0" layoutY="52.0" prefHeight="244.0" prefWidth="443.0" promptText="&gt; Press CONNECT to start" wrapText="true" />
      <Button fx:id="uploadBtn" disable="true" layoutX="26.0" layoutY="156.0" mnemonicParsing="false" onAction="#onUploadEvent" prefHeight="37.0" prefWidth="112.0" text="Upload" />
      <Button fx:id="viewBtn" disable="true" layoutX="26.0" layoutY="106.0" mnemonicParsing="false" onAction="#onViewEvent" prefHeight="37.0" prefWidth="112.0" text="View Files" />
      <Button fx:id="downloadBtn" disable="true" layoutX="26.0" layoutY="203.0" mnemonicParsing="false" onAction="#onDownloadEvent" prefHeight="37.0" prefWidth="112.0" text="Download" />
      <TextArea fx:id="serverLog" editable="false" layoutX="31.0" layoutY="402.0" prefHeight="155.0" prefWidth="443.0" promptText="Server Message" visible="false" wrapText="true" />
      <Button fx:id="showBtn" layoutX="26.0" layoutY="345.0" mnemonicParsing="false" onAction="#onShowEvent" prefHeight="37.0" prefWidth="76.0" text="Show" />
      <Button fx:id="hideBtn" disable="true" layoutX="114.0" layoutY="345.0" mnemonicParsing="false" onAction="#onHideEvent" prefHeight="37.0" prefWidth="76.0" text="Hide" />
      <Label fx:id="serverLogLabel" layoutX="31.0" layoutY="395.0" prefHeight="35.0" prefWidth="228.0" text="Server Response Messages...">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <Button fx:id="closeBtn" layoutX="519.0" layoutY="308.0" mnemonicParsing="false" onAction="#onCloseEvent" prefHeight="37.0" prefWidth="76.0" text="Close" />
   </children>
</AnchorPane>
